/*商品列表*/
.commodity {
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx 15rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}

.commodity-item {
    width: 350rpx;
    margin-bottom: 20rpx;
    /*border-radius: 10rpx;*/
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
}

.commodity-cover, .commodity-cover-img {
    width: 350rpx;
    height: 350rpx;
}

.commodity-cover {
    position: relative;
    overflow: hidden;
}

.commodity-intro {
    padding: 16rpx;
}

.commodity-shadow {
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 34rpx;
    /*border-radius: 10rpx;*/
    text-align: center;
    background-color: rgba(0, 0, 0, .5);
    color: #fff;
}
.commodity-status {
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
}
.commodity-status-bgTpye2{
  background-color: rgba(0, 0, 0, .5);
}
.commodity-status-bgTpye0{
  background-color: rgba(255, 87, 34, .65);
}

/**多行溢出省略**/
.commodity-ellipsis {
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}


