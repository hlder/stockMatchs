/* pages/actions/buy/buy.wxss */

.head_layout{
  display: flex;
  justify-content: space-between;
  height: 620rpx;
}
.holder_list_item_layout{
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #bdbdbd;
}
.holder_text{
  font-size: 32rpx;
  color:#424242;
  
}
.holder_title_layout{
  width: 100%;
  /* height: 80rpx; */
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #bdbdbd;
  border-bottom: 1rpx solid #bdbdbd;
}
.holder_title_layout_item{
  width: 25%;
  height: 100%;
  text-align: center;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  font-size: 30rpx;
  color: #9e9e9e;
}
.stock_input_layout{
  width: 69%;
  height: 100%;
}
.stock_sellbuy5_layout{
  width: 31%;
  height: 100%;
  /* background-color: blue; */
}
.stock_sellbuy5_item{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
.input_layout{
  width: 90%;
  height: 90rpx;
  font-size: 28rpx;
  margin-left: 5%;
  margin-top: 20rpx;
  padding: 15rpx;
  box-sizing: border-box;
  border: 1rpx solid #ff5722;
}
.stock_name_layout{
  width: 200rpx;
  margin-left: -220rpx;
  margin-top: 42rpx;
  text-align: right;
}

.range_btns_layout{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin-left: 5%;
  margin-top: 3rpx;
}
.range_btns_item{
  text-align: center;
  padding: 5rpx 0rpx 5rpx 0rpx;
  width: 22%;
  color: #bdbdbd;
  border: 1rpx solid #bdbdbd;
}

.icon_price_add{
  width: 55rpx;
  height: 55rpx; 
  margin-left: -70rpx;
  margin-top: 37rpx; 
}
.line_price_add{
  width: 1rpx;
  height: 90rpx;
  margin-top: 20rpx;
  margin-left: -70rpx;
  border-left:  1rpx solid #ff5722;
}
.icon_price_cut{
  width: 55rpx;
  height: 55rpx; 
  margin-left: -70%;
  margin-top: 37rpx; 
}
.line_price_cut{
  width: 1rpx;
  height: 90rpx;
  margin-top: 20rpx;
  margin-left: 15rpx;
  border-left:  1rpx solid #ff5722;
}
.buy_button{
  width: 90%;
  margin-left: 5%;
  background-color: #ff5722;
  color: white;
}
.view_line{
  width: 100%;
  height: 1rpx;
  background-color: #bdbdbd;
}